@{
    ViewData["Title"] = "Sports Guidance";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Common css/common.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background: linear-gradient(120deg, #1a1a1a 0%, #2c2c2c 100%);
            background-size: 150% 150%;
            animation: vibeFlow 10s ease infinite;
            font-family: 'Roboto', sans-serif;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }

        @@keyframes vibeFlow {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        .container {
            max-width: 1200px;
            margin: 30px auto;
            padding: 0;
            position: relative;
        }

        h1 {
            font-weight: 900;
            text-transform: uppercase;
            letter-spacing: 3px;
            color: #fff;
            text-align: center;
            margin-bottom: 50px;
            font-size: 2.5rem;
            text-shadow: 0 0 15px rgba(255, 255, 255, 0.5);
            animation: glowPulse 2s ease-in-out infinite;
        }

        @@keyframes glowPulse {
            0%, 100% {
                text-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
            }

            50% {
                text-shadow: 0 0 20px rgba(255, 255, 255, 0.7);
            }
        }

        .sports-menu {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 30px;
        }

        .sport-section {
            position: relative;
            border-radius: 15px;
            padding: 25px;
            overflow: hidden;
            transition: transform 0.4s ease, box-shadow 0.4s ease;
            animation: sportEntry 1s ease-out forwards;
            animation-delay: calc(var(--order) * 0.3s);
        }

            .sport-section:hover {
                transform: scale(1.03);
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
            }

        @@keyframes sportEntry {
            from {
                opacity: 0;
                transform: translateY(50px) rotate(2deg);
            }

            to {
                opacity: 1;
                transform: translateY(0) rotate(0);
            }
        }

        /* Sport-Specific Styles */
        .nba {
            background: linear-gradient(135deg, #ff6200 0%, #1e3c72 100%);
        }

        .csgo {
            background: linear-gradient(135deg, #1a3c34 0%, #ffcc00 100%);
        }

        .premier {
            background: linear-gradient(135deg, #b71c1c 0%, #4caf50 100%);
        }

        .nfl {
            background: linear-gradient(135deg, #003087 0%, #d32f2f 100%);
        }

        .sport-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.4);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .sport-section:hover .sport-overlay {
            opacity: 1;
        }

        .sport-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #fff;
            margin-bottom: 20px;
            position: relative;
            z-index: 1;
            text-shadow: 0 2px 5px rgba(0, 0, 0, 0.6);
        }

        .nav-btn {
            display: block;
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
            text-decoration: none;
            padding: 15px;
            margin-bottom: 15px;
            border-radius: 8px;
            font-weight: 600;
            position: relative;
            z-index: 1;
            overflow: hidden;
            border: 1px solid rgba(255, 255, 255, 0.3);
            transition: all 0.3s ease;
        }

            .nav-btn::before {
                content: '';
                position: absolute;
                top: 50%;
                left: 50%;
                width: 0;
                height: 0;
                background: rgba(255, 255, 255, 0.3);
                border-radius: 50%;
                transform: translate(-50%, -50%);
                transition: width 0.5s ease, height 0.5s ease;
                z-index: -1;
            }

            .nav-btn:hover {
                transform: translateX(5px);
                background: rgba(255, 255, 255, 0.2);
                box-shadow: 0 0 15px rgba(255, 255, 255, 0.5);
            }

                .nav-btn:hover::before {
                    width: 400px;
                    height: 400px;
                }

        @@media (max-width: 768px) {
            .sports-menu {
                grid-template-columns: 1fr;
            }

            .sport-section {
                padding: 20px;
            }
        }

        @@media (max-width: 480px) {
            h1 {
                font-size: 1.8rem;
            }

            .sport-title {
                font-size: 1.2rem;
            }

            .nav-btn {
                padding: 12px;
                font-size: 0.9rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Sports Guidance</h1>
        <div class="sports-menu">
            <!-- NBA Section -->
            <div class="sport-section nba" style="--order: 1;">
                <div class="sport-overlay"></div>
                <div class="sport-title">NBA</div>
                <a class="nav-btn" asp-controller="NBA" asp-action="Index">Home</a>
            </div>

            <!-- CS:GO Section -->
            <div class="sport-section csgo" style="--order: 2;">
                <div class="sport-overlay"></div>
                <div class="sport-title">CS:GO</div>
                <a class="nav-btn" asp-controller="CSGO" asp-action="CSGOView">Players</a>
            </div>

            <!-- Premier League Section -->
            <div class="sport-section premier" style="--order: 3;">
                <div class="sport-overlay"></div>
                <div class="sport-title">Premier League</div>
                <a class="nav-btn" asp-controller="Premier" asp-action="PremierMatch">Matches</a>
            </div>

            <!-- NFL Section -->
            <div class="sport-section nfl" style="--order: 4;">
                <div class="sport-overlay"></div>
                <div class="sport-title">NFL</div>
                <a class="nav-btn" asp-controller="NFL" asp-action="Home">Home</a>
            </div>
        </div>
    </div>

    <script>
        document.querySelectorAll('.nav-btn').forEach(btn => {
            let timeout;
            btn.addEventListener('mouseenter', () => {
                timeout = setTimeout(() => {
                    window.location.href = btn.getAttribute('href');
                }, 600); // 600ms delay for hover navigation
            });

            btn.addEventListener('mouseleave', () => {
                clearTimeout(timeout);
            });

            btn.addEventListener('click', (e) => {
                e.preventDefault();
                window.location.href = btn.getAttribute('href'); // Immediate click option
            });
        });
    </script>
</body>
</html>