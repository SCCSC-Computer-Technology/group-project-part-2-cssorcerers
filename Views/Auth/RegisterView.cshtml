@* REGISTER VIEW *@

@model SportIQ.Models.User

@{
    ViewData["Title"] = "SportIQ - Register";
}

<head>
    <link rel="stylesheet" href="~/css/common.css">
    <link rel="stylesheet" href="~/css/register.css">
</head>


<div class="main-container">
    <div class="image-section">
        @* Any ideas you can add either logo or image *@
    </div>

    <div class="form-container">
        <div class="title-box">Register</div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        <form asp-action="Register" method="post">
            <div class="form-group">
                <input asp-for="UserName" type="text" class="form-control" id="UserName" placeholder="Enter username" required />
            </div>
            <div class="form-group">
                <input asp-for="Email" type="email" class="form-control" id="Email" placeholder="Enter email" required />
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Enter password" required />
            </div>

            <button type="submit" class="btn btn-primary w-120">Register</button>

            <div class="text-center mt-3">
                <small>Already have an account? <a asp-action="Login">Login</a></small>
            </div>
        </form>
    </div>
</div>
