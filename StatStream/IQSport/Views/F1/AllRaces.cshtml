@model IQSport.ViewModels.F1.F1RacesViewModel
@{
    ViewData["Title"] = "All F1 Races";
}

<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Sports css/f1.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/Common css/common.css" asp-append-version="true">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h2>F1 Races</h2>

        <!-- Table -->
        <div class="table-container">
            <table class="players-table">
                <thead>
                    <tr>
                        <th>Year</th>
                        <th>Round</th>
                        <th>Race</th>
                        <th>Date</th>
                        <th>Circuit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var race in Model.F1Races)
                    {
                        <tr>
                            <td data-label="Year">@race.Year</td>
                            <td data-label="Round">@race.Round</td>
                            <td data-label="Race">
                                <a href="@Url.Action("Races", "F1", new { raceID = race.RaceID })">
                                    @race.Name
                                </a>
                            </td>
                            <td data-label="Date">@race.Date</td>
                            <td data-label="Circuit">@race.CircuitName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="pagination">
            <a asp-action="AllRaces" asp-route-page="1" role="button">First</a>
            <a asp-action="AllRaces" asp-route-page="@(Model.CurrentPage - 1)" role="button">Prev</a>
            <span>Page @Model.CurrentPage of @Model.MaxPage</span>
            <a asp-action="AllRaces" asp-route-page="@(Model.CurrentPage + 1)" role="button">Next</a>
            <a asp-action="AllRaces" asp-route-page="@Model.MaxPage" role="button">Last</a>
        </div>
    </div>
</body>
</html>