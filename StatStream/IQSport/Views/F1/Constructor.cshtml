@model SportsData.Models.F1Constructor
@{
    ViewData["Title"] = $"{Model.Name ?? "Unknown Constructor"} Info";
}

<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Sports css/f1.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/Common css/common.css" asp-append-version="true">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        @if (Model != null)
        {
            <h2>@Model.Name Constructor Info</h2>
            <hr />
            @if (Model.ConstructorRef == null && Model.Nationality == null && Model.Url == null)
            {
                <h3>No Info to Display</h3>
            }
            else
            {
                <div class="info-section">
                    @if (!string.IsNullOrEmpty(Model.ConstructorRef))
                    {
                        <h4>Reference: @Model.ConstructorRef</h4>
                    }
                    @if (!string.IsNullOrEmpty(Model.Nationality))
                    {
                        <h4>Nationality: @Model.Nationality</h4>
                    }
                    @if (!string.IsNullOrEmpty(Model.Url))
                    {
                        <h4>More Info: <a href="@Model.Url" target="_blank">@Model.Url</a></h4>
                    }
                </div>
            }
        }
        else
        {
            <h3>No constructor data found.</h3>
        }
    </div>
</body>
</html>