@using SportsData.Models

@model F1DriverInfo

@{
	<link rel="stylesheet" href="~/css/common.css">
	ViewData["title"] = $"{Model.Name ?? "Unknown Driver"}'s Stats";
}
<head>
	<style>
		hr {
			color: black;
			height: 2px;
			width: 100%;
		}
	</style>
</head>
@if (Model != null)

{
	<div>
		<h2>@Model.Name's Career Stats</h2>

		@if (Model.Number == null)

		{
			<h3>Number: None</h3>
		}

		else

		{
			<h3>Number: @Model.Number</h3>
		}
		<hr style="height: 2px" />

		@if (Model.Code == null && Model.Dob == null && Model.Nationality == null)

		{
			<h3>No Stats to Display</h3>
		}

		else

		{
			<h4>Code: @Model.Code</h4>
			<h4>Birthdate: @Model.DobDateOnly</h4>
			<h4>Nationality: @Model.Nationality</h4>
			<br />
			<hr style="height: 2px" />


		}
	</div>
}