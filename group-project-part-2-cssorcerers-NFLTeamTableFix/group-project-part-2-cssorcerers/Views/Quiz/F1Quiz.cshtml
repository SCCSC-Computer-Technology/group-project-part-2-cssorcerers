@model SportIQ.Models.F1QuizAnswersViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>F1 Quiz</title>
    <link rel="stylesheet" href="~/css/common.css" />

    <style>
        body {
            background-color: black;
            background: linear-gradient(to bottom right, #111, #333);
            color: white; /* makes all text white */
            font-family: Arial, sans-serif;
            padding: 20px;
            margin: 0;
        }

        h1, h2 {
            text-align: center;
            color: white;
        }

        form {
            max-width: 800px;
            margin: auto;
            background-color: rgba(255, 255, 255, 0.05);
            padding: 30px;
            border-radius: 10px;
        }
        /*
        .question {
            margin-bottom: 30px;
        }
        
        .question h4 {
            margin-bottom: 10px;
        }

        .answer {
            display: flex;
            align-items: center;
            margin: 5px 0;
        }

        .answer input[type="checkbox"] {
            margin-right: 10px;
            transform: scale(1.2);
        }
        */


        label {
            display: block;
            margin: 5px 0;
            font-size: 16px;
            text-align: left;
            padding-left: 10px;
        }

        input[type="checkbox"] {
            margin-right: -100px;
            transform: scale(1.2);
            vertical-align: middle;
        }

        .submit-btn {
            display: block;
            margin: 30px auto 0 auto;
            padding: 10px 20px;
            font-size: 16px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .submit-btn:hover {
            background-color: #0056b3;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h1>F1 Quiz</h1>
    <h3>Select the two current drivers for each F1 team</h3>

    @* Show score if it's available *@
    @if (ViewBag.Score != null)
    {
        <h3>You scored @ViewBag.Score out of @ViewBag.Total</h3>
        <p><a href="@Url.Action("F1Quiz")">Try Again</a></p>
    }

    <form asp-action="F1Quiz" method="post">
        @for (int i = 0; i < 10; i++)
        {
            <div class="question">
                <h4>Question @(i + 1): Which drivers race for @ViewBag.GetTeamName(i)?</h4>

                @switch (i)
                {
                    case 0: // Red Bull
                        <label><input type="checkbox" name="Answers[@i]" value="Max Verstappen" /> Max Verstappen</label>
                        <label><input type="checkbox" name="Answers[@i]" value="Yuki Tsunoda" /> Yuki Tsunoda</label>
                        <label><input type="checkbox" name="Answers[@i]" value="Liam Lawson" /> Liam Lawson</label>
                        <label><input type="checkbox" name="Answers[@i]" value="Lando Norris" /> Lando Norris</label>
                        break;

                    case 1: // Mercedes
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Kimi Antonelli" /> Kimi Antonelli
                        </label>
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="George Russell" /> George Russell
                        </label>
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Valtteri Bottas" /> Valtteri Bottas
                        </label>
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Lewis Hamilton" /> Lewis Hamilton
                        </label>
                        break;

                    case 2: // Ferrari
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Charles Leclerc" /> Charles Leclerc
                        </label>
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Lewis Hamilton" /> Lewis Hamilton
                        </label>
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Oscar Piastri" /> Oscar Piastri
                        </label>
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Lance Stroll" /> Lance Stroll
                        </label>
                        break;

                    case 3: // McLaren
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Lando Norris" /> Lando Norris
                        </label>
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Oscar Piastri" /> Oscar Piastri
                        </label>
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Max Verstappen" /> Max Verstappen
                        </label>
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Carlos Sainz" /> Carlos Sainz
                        </label>
                        break;

                    case 4: // Aston Martin
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Fernando Alonso" /> Fernando Alonso
                        </label>
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Gabriel Bortoleto" /> Gabriel Bortoleto
                        </label>
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Esteban Ocon" /> Esteban Ocon
                        </label>
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Lance Stroll" /> Lance Stroll
                        </label>
                        break;

                    case 5: // Alpine
                        <label>
                            <label>
                                <input type="checkbox" name="Answers[@i]" value="Ollie Bearman" /> Ollie Bearman
                            </label>
                            <label>
                                <input type="checkbox" name="Answers[@i]" value="Isack Hadjar" /> Isack Hadjar
                            </label>
                            <input type="checkbox" name="Answers[@i]" value="Jack Doohan" /> Jack Doohan
                        </label>
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Pierre Gasly" /> Pierre Gasly
                        </label>
                        break;

                    case 6: // Williams
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Alex Albon" /> Alex Albon
                        </label>
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Logan Sargeant" /> Logan Sargeant
                        </label>
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Jack Doohan" /> Jack Doohan
                        </label>
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Carlos Sainz" /> Carlos Sainz
                        </label>
                        
                        break;

                    case 7: // Racing Bulls
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Yuki Tsunoda" /> Yuki Tsunoda
                        </label>
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Pierre Gasly" /> Pierre Gasly
                        </label>
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Isack Hadjar" /> Isack Hadjar
                        </label>
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Liam Lawson" /> Liam Lawson
                        </label>
                        break;

                    case 8: // Kick Sauber
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Alex Albon" /> Alex Albon
                        </label>
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Gabriel Bortoleto" /> Gabriel Bortoleto
                        </label>
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Nico Hulkenberg" /> Nico Hulkenberg
                        </label>
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Zhou Guanyu" /> Zhou Guanyu
                        </label>
                        break;

                    case 9: // Haas
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Ollie Bearman" /> Ollie Bearman
                        </label>
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Nico Hulkenberg" /> Nico Hulkenberg
                        </label>
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Esteban Ocon" /> Esteban Ocon
                        </label>
                        <label>
                            <input type="checkbox" name="Answers[@i]" value="Fernando Alonso" /> Fernando Alonso
                        </label>
                        break;
                }
            </div>
        }

        <button type="submit" class="submit-btn">Submit Quiz</button>

        <div style="text-align: center; margin-top: 20px;">
            <a href="@Url.Action("Index", "Quiz")" class="back-btn">Back to Quiz Selection</a>
        </div>
    </form>

    @*allows max 2 checkboxes per question *@
    
    <script>
    document.querySelectorAll('.question').forEach(question => {
    const checkboxes = question.querySelectorAll('input[type="checkbox"]');
    checkboxes.forEach(checkbox => {
    checkbox.addEventListener('change', () => {
    const checked = Array.from(checkboxes).filter(cb => cb.checked);
    if (checked.length > 2) {
    checkbox.checked = false;
    alert('Only select two drivers per team!');
    }
    });
    });
    });
    </script>
    
</body>
</html>